{% extends "@NovaeZMailing/admin/layout/pagelayout.html.twig" %}

{% block novezmailing_breadcrumb %}
    <ol class="breadcrumb px-4">
        <li class="breadcrumb-item"><a href="{{ path("novaezmailing_dashboard_index") }}">Nova eZ Mailing</a></li>
        <li class="breadcrumb-item active">{{ 'campaign.breadcrumb.mailinglist'|trans({}, 'ezmailing') }}</li>
    </ol>
{% endblock %}
{% block novezmailing_title %}<img src="{{ asset("/bundles/novaezmailing/admin/images/32x32/mailinglist.png") }}" class="nova-icon" /> {{ 'mailinglist.title'|trans({}, 'ezmailing') }}{% endblock %}
{% block novezmailing_subtitle %}{{ 'mailinglist.subtitle'|trans({}, 'ezmailing') }}{% endblock %}

{% block content %}
    <table class="table table-hover table-sm">
        <thead>
        <tr>
            <th class="text-center">ID</th>
            <th>{{ 'mailinglist.table.name'|trans({}, 'ezmailing') }}</th>
            <th class="text-center">{{ 'mailinglist.table.approbation'|trans({}, 'ezmailing') }}</th>
            <th class="text-center">{{ 'mailinglist.table.updated'|trans({}, 'ezmailing') }}</th>
            <th class="text-center">{{ 'mailinglist.table.created'|trans({}, 'ezmailing') }}</th>
            <th class="text-center">{{ 'mailinglist.table.registrations_count'|trans({}, 'ezmailing') }}</th>
        </tr>
        </thead>
        <tbody>
        {% for item in items if is_granted('view', item) %}
            <tr>
                <td class="text-center">{{ item.id }}</td>
                <td><a href="{{ path('novaezmailing_mailinglist_show', {'mailingList':item.id}) }}">{{ item.name }}</a>
                </td>
                <td class="text-center">{{ item.withApproval ? "approbation.yes"|trans({}, 'ezmailing') : "approbation.no"|trans({}, 'ezmailing') }}</td>
                <td class="text-center">{{ item.created|localizeddate(novaezmailing.dateformat.date, novaezmailing.dateformat.date) }}</td>
                <td class="text-center">{{ item.updated|localizeddate(novaezmailing.dateformat.date, novaezmailing.dateformat.date) }}</td>
                <td class="text-center">{{ item.registrations|length }}</td>
                <td class="text-center">
                    <a href="{{ path("novaezmailing_mailinglist_edit", {'mailinglist': item.id} ) }}" class="edit-button">
                        <svg class="ez-icon">
                            <use xlink:href="/bundles/ezplatformadminui/img/ez-icons.svg#edit"></use>
                        </svg>
                    </a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="novaezmailing-button-actions float-right">
        <a type="button" class="btn btn-sm btn-secondary" href="{{ path('novaezmailing_mailinglist_create') }}">
            <svg class="ez-icon">
                <use xlink:href="/bundles/ezplatformadminui/img/ez-icons.svg#create"></use>
            </svg>
            <span>Create a new Mailing List</span>
        </a>
    </div>
{% endblock %}
