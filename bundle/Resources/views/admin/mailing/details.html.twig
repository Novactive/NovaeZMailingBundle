<table class="table table-striped table-hover table-sm">
    <tr>
        <th>{{ 'mailing.details.name'|trans({}, 'ezmailing') }}</th>
        <td>{{ item.name }}</td>
    </tr>
    <tr>
        <th>{{ 'mailing.details.status'|trans({}, 'ezmailing') }}</th>
        <td>
            <img src="{{ asset("/bundles/novaezmailing/admin/images/32x32/"~item.status~".png") }}" class="nova-icon"/>
            {{ ('mailings.status.'~item.status)|trans({}, 'ezmailing') }}
        </td>
    </tr>

    {% set nextTick = item.nextTick %}
    {% if item.hasBeenSent %}
        <tr>
            <th>{{ 'mailing.details.last_sent_date'|trans({}, 'ezmailing') }}</th>
            <td>
                {{ item.lastSent|localizeddate(novaezmailing.dateformat.date, novaezmailing.dateformat.date) }}
            </td>
        </tr>
    {% endif %}
    <tr>
        <th>
            {% if item.recurring %}
                {{ 'mailing.details.frequency'|trans({}, 'ezmailing') }}
            {% else %}
                {{ 'mailing.details.rules'|trans({}, 'ezmailing') }}
            {% endif %}
        </th>
        <td>
            <table class="table table-striped table-hover table-sm">
                <tr>
                    <th class="text-center">{{ 'mailing.details.hours_day'|trans({}, 'ezmailing') }}</th>
                    <th class="text-center">{{ 'mailing.details.days_week'|trans({}, 'ezmailing') }}</th>
                    <th class="text-center">{{ 'mailing.details.days_month'|trans({}, 'ezmailing') }}</th>
                    <th class="text-center">{{ 'mailing.details.weeks_month'|trans({}, 'ezmailing') }}</th>
                    <th class="text-center">{{ 'mailing.details.months_year'|trans({}, 'ezmailing') }}</th>
                    <th class="text-center">{{ 'mailing.details.weeks_year'|trans({}, 'ezmailing') }}</th>
                </tr>
                <tr>
                    <td class="text-center">{{ item.hoursOfDay|join(',')|default("*") }}</td>
                    <td class="text-center">{{ item.daysOfWeek|join(',')|default("*") }}</td>
                    <td class="text-center">{{ item.daysOfMonth|join(',')|default("*") }}</td>
                    <td class="text-center">{{ item.weeksOfMonth|join(',')|default("*") }}</td>
                    <td class="text-center">{{ item.monthsOfYear|join(',')|default("*") }}</td>
                    <td class="text-center">{{ item.weeksOfYear|join(',')|default("*") }}</td>
                </tr>
            </table>
        </td>
    </tr>
    {% if not (item.isAborted or item.isArchived or item.isProcessing) %}
        {% if item.recurring %}
            <tr>
                <th>{{ 'mailing.details.next_sending_date'|trans({}, 'ezmailing') }}</th>
                <td>
                    {% if nextTick is not null %}
                        {{ nextTick|localizeddate(novaezmailing.dateformat.date, novaezmailing.dateformat.date) }}
                    {% else %}
                        n/a
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <th>{{ 'mailing.details.sending_date'|trans({}, 'ezmailing') }}</th>
                <td>
                    {% if nextTick is not null %}
                        {{ nextTick|localizeddate(novaezmailing.dateformat.date, novaezmailing.dateformat.date) }}
                    {% else %}
                        n/a
                    {% endif %}
                </td>
            </tr>
        {% endif %}
    {% endif %}
    {% if item.isProcessing %}
        <tr>
            <th>{{ 'mailing.details.sending_date'|trans({}, 'ezmailing') }}</th>
            <td>{{ 'mailing.details.in_progress'|trans({}, 'ezmailing') }}</td>
        </tr>

    {% endif %}
</table>
