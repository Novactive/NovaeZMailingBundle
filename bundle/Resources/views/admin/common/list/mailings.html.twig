{% set withTitle = withTitle is defined ? withTitle : true %}
<table class="table table-striped table-hover table-sm">
    {% if withTitle %}
        <tr>
            <th>{{ 'mailings.list.name'|trans({}, 'ezmailing') }}</th>
            <th>{{ 'mailings.list.status'|trans({}, 'ezmailing') }}</th>
            <th>&nbsp;</th>
        </tr>
    {% endif %}
    {% for item in items %}
        <tr>
            <td>
                <a href="{{ path('novaezmailing_mailing_show', {mailing:item.id}) }}">{{ item.name }}</a>
            </td>
            <td>
                <img src="{{ asset("/bundles/novaezmailing/admin/images/16x16/"~item.status~".png") }}" class="nova-icon"/> {{ ('mailings.status.'~item.status)|trans({}, 'ezmailing') }}
            </td>
            <td>
                {% if workflow_can(item,'edit') %}
                    <a href="{{ path('novaezmailing_mailing_edit', {mailing: item.id}) }}" class="edit-button">
                        <svg class="ez-icon">
                            <use xlink:href="/bundles/ezplatformadminui/img/ez-icons.svg#edit"></use>
                        </svg>
                    </a>
                {% else %}
                    <a href="#" class="edit-button disabled">
                        <svg class="ez-icon">
                            <use xlink:href="/bundles/ezplatformadminui/img/ez-icons.svg#edit"></use>
                        </svg>
                    </a>
                {% endif %}
                <a href="{{ path('_novaezmailing_ez_content_view', { locationId: item.location.id, contentId: item.content.id, mailingId: item.id }) }}" class="edit-button">
                    <svg class="ez-icon">
                        <use xlink:href="/bundles/ezplatformadminui/img/ez-icons.svg#view"></use>
                    </svg>
                </a>
            </td>
        </tr>

    {% endfor %}
</table>
